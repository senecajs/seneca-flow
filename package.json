{
  "name": "@seneca/flow",
  "version": "0.3.0",
  "main": "dist/flow.js",
  "type": "commonjs",
  "types": "dist/flow.d.ts",
  "description": "Workflow operations and data model.",
  "homepage": "https://github.com/senecajs/seneca-flow",
  "keywords": [
    "seneca",
    "flow"
  ],
  "author": "Richard Rodger - richardrodger.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/senecajs/seneca-flow.git"
  },
  "scripts": {
    "test": "jest --coverage",
    "test-some": "jest -t",
    "test-watch": "jest --coverage --watchAll",
    "watch": "tsc -w -d",
    "build": "tsc -d",
    "clean": "rm -rf node_modules yarn.lock package-lock.json",
    "reset": "npm run clean && npm i && npm test",
    "repo-tag": "REPO_VERSION=`node -e \"console.log(require('./package').version)\"` && echo TAG: v$REPO_VERSION && git commit -a -m v$REPO_VERSION && git push && git tag v$REPO_VERSION && git push --tags;",
    "repo-publish": "npm run clean && npm i && npm run repo-publish-quick",
    "repo-publish-quick": "npm run build && npm run test && npm run repo-tag && npm publish --access public --registry https://registry.npmjs.org "
  },
  "license": "MIT",
  "files": [
    "dist",
    "src/**/*.ts",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@seneca/maintain": "^0.1.0",
    "@types/jest": "^29.5.5",
    "esbuild": "^0.19.3",
    "esbuild-jest": "^0.5.0",
    "jest": "^29.7.0",
    "seneca-msg-test": "^3.4.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "seneca": ">=3",
    "seneca-promisify": ">=3",
    "seneca-entity": ">=24"
  }
}
